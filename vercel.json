{
  "framework": "sveltekit",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "/_vercel/static/$1"
    }
  ],
  "functions": {
    "api/index.js": {
      "handler": "api/dist/index.js",
      "runtime": "nodejs18.x",
      "memory": 128,
      "maxDuration": 10
    }
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@sveltejs/adapter-vercel-sveltekit"
    },
    {
      "src": "api/package.json",
      "use": "@vercel/node",
      "config": {
        "entrypoint": "dist/index.js"
      }
    }
  ],
  "buildCommand": "bun install --cwd frontend && bun run build --cwd frontend && bun install --cwd api && bun run build --cwd api",
  "outputDirectory": "frontend/build",
  "devCommand": "bun run dev --cwd frontend"
}
